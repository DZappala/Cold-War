							elide = right
							align = left|nobaseline
							autoresize = yes

							text = "GARRISONED_CONCEPT"
						}
					}

					flowcontainer = {
						parentanchor = right|vcenter
						spacing = 10

						textbox = {
							visible = "[Character.HasShippingLane]"
